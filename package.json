{
  "name": "canto-toolbox",
  "version": "1.1.0",
  "description": "Hover over Chinese words to see definitions in Mandarin and Cantonese with pronunciations",
  "type": "module",
  "scripts": {
    "build:scripts": "tsc -p build-tools/tsconfig.json",
    "build:dict": "pnpm build:scripts && node build-tools/dist/build-tools/build-dictionaries.js",
    "build": "pnpm build:dict && NODE_OPTIONS=--max-old-space-size=8192 vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist src/data build-tools/dist"
  },
  "keywords": [
    "chrome-extension",
    "chinese",
    "dictionary",
    "mandarin",
    "cantonese"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.25",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.14.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
