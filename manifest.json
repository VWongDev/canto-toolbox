{
  "manifest_version": 3,
  "name": "Canto Toolbox",
  "version": "1.1.1",
  "description": "Hover over Chinese words to see definitions in Mandarin and Cantonese with pronunciations",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "src/scripts/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/scripts/content.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/html/stats.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/data/*.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
